           <artifactId>acl-spi</artifactId>
           <version>${project.version}</version>
           <scope>compile</scope>
       </dependency>
       <dependency>
         <groupId>org.picketbox</groupId>
         <artifactId>authorization-spi</artifactId>
         <version>${project.version}</version>
         <scope>compile</scope>
      </dependency>
       <dependency>
           <groupId>org.picketbox</groupId>
